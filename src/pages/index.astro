---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import VacationCard from "../components/VacationCard.astro";

const cardData = [
  {
    img: "images/cruise.jpg",
    title: "Cruises",
    text: "Cruise Text",
  },
  {
    img: "images/transportation.jpg",
    title: "Route Planner",
    text: "Route Planner Text",
  },
];
---

<Layout title="Vacation Website">
  <main>
    <div class="relative">
      <div class="vacation-covers">
        <div><img src="images/tropicalbeach.jpg" class="cover-img" /></div>
        <div><img src="images/waterfall.jpg" class="cover-img" /></div>
        <div><img src="images/beachhut.jpg" class="cover-img" /></div>
        <div><img src="images/beachchairs.jpg" class="cover-img" /></div>
      </div>

    <div class="absolute inset-y-48 lg:inset-y-72 font-extrabold slider-text px-10">
<div>
  <span class="bg-clip-text text-transparent bg-gradient-to-b from-white to-white main-home-header drop-shadow-[0_1.5px_1.5px_rgba(0,0,0,1)]"><span class="pl-0 md:pl-24 pr-4 select-none">Plan Your Vacation
  </span></div>
<span class="pl-5 float-right">
<button class="rounded-full bg-transparent border-4 border-white text-white py-2 px-4 mt-2 sm:text-lg lg:text-3xl hover:scale-110 transition ease-in-out hover:border-[#2af1f5] hover:text-[#2af1f5] drop-shadow-[0_1.2px_1.2px_rgba(0,0,0,1)]">Learn More</button>
</span>
    </div>

      <div class="vacation-slides absolute left-2 bottom-2 w-4/6">
        <div><img src="images/beach.jpg" class="max-w-full" /></div>
        <div><img src="images/boardwalk.jpg" class="max-w-full" /></div>
        <div><img src="images/palmtrees.jpg" class="max-w-full" /></div>
        <div><img src="images/beachchairs.jpg" class="max-w-full" /></div>
      </div>
    </div>

    <div class="container mx-auto">
      <h1 class="mt-5 text-center">Begin Planning Your Vacation</h1>
      <div class="grid grid-cols-2 gap-3 mt-5">
        <VacationCard
          img="images/flight.jpg"
          title="Flights"
          text="Find deals on flights to Taniti. Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris."
        />
        <VacationCard
          img="images/hotel.jpg"
          title="Hotels and Lodging"
          text="Whether you are looking for a fancy resort, a more modest room, or a trendy beach house, a wide variety of lodging options are available! Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore."
        />
        {
          cardData.map((card) => {
            return (
              <VacationCard
                img={card.img}
                title={card.title}
                text={card.text}
              />
            );
          })
        }
      </div>
    </div>


<button class="rounded-full bg-transparent border-2 border-[#22c1c3] text-[#22c1c3] py-2 px-4 mt-2 sm:text-lg lg:text-2xl hover:scale-110 transition ease-in-out hover:border-[#2af1f5] hover:text-[#2af1f5]">Open Modal</button>


<div id="myModal" class="modal my-10">
  <div class="modal-content m-auto border border-black-600 sm:w-full md:w-3/4 bg-cyan-400 bg-[#22c1c3] relative flex flex-wrap md:h-[25rem] xl:h-[40rem]">
    <a href="#" class="close absolute right-2 top-2 text-4xl bg-white rounded-full w-10 h-10 text-center p-0 text-[#22c1c3] hover:text-[#2af1f5] hover:scale-110 transition ease-in-out border border-4 border-[#22c1c3] hover:border-[#2af1f5] m-auto leading-7">&times;</a>
<div class="h-100 w-1/2 lg:w-1/3  p-3 flex flex-col items-center justify-center"
    <div class="m-auto">
    <h5 class="sm:text-4xl xl:text-5xl font-semibold">Header Text..</h5>
    <div class="text-xs md:text-lg xl:p-4">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore. Elit ut aliquam purus sit amet luctus venenatis lectus magna.</div>
    <button class="rounded-full bg-transparent border-2 border-white text-white py-2 px-4 mt-2 sm:text-lg lg:text-2xl hover:scale-110 transition ease-in-out hover:border-[#2af1f5] hover:text-[#2af1f5]">Learn More</button>
</div>
<div class="text-5xl w-1/2 lg:w-2/3 bg-white">
<img src="images/tropical.jpg" class="md:h-[25rem] xl:h-[40rem] object-cover w-full" />
</div>
</div>

  </div>
</div>





  </main>


</Layout>

<style>
  h1 {
    font-size: 3rem;
    font-weight: 800;
    margin: 0;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;

  }
  .instructions {
    line-height: 1.6;
    margin: 1rem 0;
    border: 1px solid rgba(var(--accent), 25%);
    background-color: white;
    padding: 1rem;
    border-radius: 0.4rem;
  }
  .instructions code {
    font-size: 0.875em;
    font-weight: bold;
    background: rgba(var(--accent), 12%);
    color: rgb(var(--accent));
    border-radius: 4px;
    padding: 0.3em 0.45em;
  }
  .instructions strong {
    color: rgb(var(--accent));
  }
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }

  .cover-img {
    object-fit: cover;
    height: 95vh;
    width: 100%;
  }


  .vacation-slides div {
    margin: 30px;
    border-top: 5px solid white;
    border-left: 5px solid white;
    border-right: 5px solid white;
    border-bottom: 80px solid white;
box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  }

.vacation-slides div:hover {
cursor: pointer;
}

.main-home-header {
  font-family: 'Allura';
  font-size: 150px;
    line-height: 0.8;
}

@media (max-width: 1200px) {
.main-home-header {
  font-size: 100px;
}
}

@media (max-width: 768px) {
.main-home-header {
  font-size: 80px;
}
  h1 {
  font-size: calc(1.375rem + 1.5vw);
  }

  .vacation-slides div {
    border: none;
  }
}
</style>

<script
  type="text/javascript"
  src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"
></script>
<link
  rel="stylesheet"
  type="text/css"
  href="http://kenwheeler.github.io/slick/slick/slick-theme.css"
/>

<script>
  $(document).ready(function () {
    $(".vacation-covers").slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      autoplay: true,
      infinite: true,
      speed: 500,
      fade: true,
      cssEase: 'linear',
      asNavFor: ".vacation-slides",
    });
    $(".vacation-slides").slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      asNavFor: ".vacation-covers",
      dots: false,
      arrows: false,
      centerPadding: "40px",
      autoplay: true,
      focusOnSelect: true,
      infinite: true,

    });
  });
</script>
