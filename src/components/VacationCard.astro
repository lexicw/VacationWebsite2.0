---
export interface Props {
  img: string;
  title: string;
  text: string;
}

const { img, title, text } = Astro.props;
---

<div class="card col-span-1 rounded-lg filter drop-shadow-lg bg-gradient-to-t from-black/75 via-black/0">
  <a href="#">
    <img class="w-full card-img" src={img} />
    <div class="card-body w-full h-1/4">
      <div
        class="text-center text-white card-title tracking-tight font-bold"
      >
        {title}
      </div>
      <div class="card-text text-white p-6 text-xl">
        {text}
      </div>
    </div>
  </a>
</div>

<style>
  :root {
    --primary: rgb(34, 193, 195);
    --primary-gradient: linear-gradient(
      90deg,
      rgba(34, 193, 195, 1) 0%,
      rgba(45, 154, 253, 1) 100%
    );
  }

  .card:hover,
  .card a:hover,
  .card img:hover {
  }

  .card:hover img,
  .card:hover a {
  }

  .card {
    position: relative;
    overflow: hidden;
  }

.card::before{
  content:'';
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
  background-image:linear-gradient(180deg,transparent,rgba(0,0,0,0.6) 95%);
  z-index:2;
}

  .card-img {
    filter: brightness(1);
    transition: 0.5s ease;
  }

  .card:hover .card-body {
    bottom: 25%;
  }

  .card:hover .card-text {
    opacity: 1;
    transition: 1s ease-in;
  }

  .card:hover .card-img {
    filter: brightness(0.5);
  }

  .card-body {
    position: absolute;
    bottom: 0;
    transition: all 0.5s ease;
    z-index: 3;
  }

  .card-title {
    text-shadow: 0px 4px 3px rgba(0, 0, 0, 0.4), 0px 8px 13px rgba(0, 0, 0, 0.6),
      0px 18px 23px rgba(0, 0, 0, 0.5);
    width: 100%;
    text-align: center;
    font-size: calc(2rem + 1vw);
  }

  .card-text {
    opacity: 0;
  }

@media (max-width: 768px) {
  .card-title {
  font-size: calc(1.075rem + 1vw);
  }
  .card-text {
    display: none;
  }
  .card:hover .card-body {
    bottom: 0;
  }
}
</style>
